# Backend Todo API - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
# Neon Serverless PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database?sslmode=require

# =============================================================================
# JWT Authentication (RS256)
# =============================================================================
# PEM-encoded RSA public key for JWT verification
# Get this from your Better Auth configuration
# Note: Use \n for newlines in the key
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIBIjAN...\n-----END PUBLIC KEY-----"

# JWT signing algorithm (should match Better Auth)
JWT_ALGORITHM=RS256

# Expected JWT issuer (optional, for additional validation)
# JWT_ISSUER=better-auth

# =============================================================================
# CORS Configuration
# =============================================================================
# Frontend URL for CORS (must match exactly, including protocol and port)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Rate Limiting
# =============================================================================
# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Server Configuration
# =============================================================================
# Host to bind to
HOST=0.0.0.0

# Port to listen on
PORT=8000

# Debug mode (set to false in production)
DEBUG=false
